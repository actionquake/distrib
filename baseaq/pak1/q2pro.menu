begin dm_botmenu
    title "Deathmatch"
    strings "map" nextserver $com_maplist
    range "bot skill" ltk_skill 0 10 1
    range "bot count" am_botcount 0 10 1
    blank
    toggle "spawn with all weapons" allweapon
    toggle "spawn with all items" allitem
    field --integer --status "0 - no time limit" --width 3 "time limit" timelimit
    field --integer --status "0 - no frag limit" --width 3 "frag limit" fraglimit
    blank
    pairs --status "Choose your starting weapon/item" "Choose weapon/item" dm_choose "enabled" 1 "disabled" 0
    pairs --status "Spawn protection" "Enable 3 second spawn protection" dm_shield "disabled" 0 "enabled" 30
    blank
    action " Additional Game Settings " pushmenu gameflags
    blank
    action --align " Play" "forcemenuoff;set ltk_loadbots 1;set am 2; set maxclients 16; set teamplay 0; set dm_choose 0;set dm_shield 30;set allweapon $allweapon;set allitem $allitem; map $nextserver force"
end

begin team_botmenu
    title "Team Games"
    strings "map" nextserver $com_maplist
    values --status "Team Deathmatch or Round-based Teamplay" "TeamDM or Teamplay" teamdm tdm teamplay
    range "bot skill" ltk_skill 0 10 1
    range "bot count" am_botcount 0 10 1
    blank
    toggle "spawn with all weapons" allweapon
    toggle "spawn with all items" allitem
    field --integer --status "0 - no time limit" --width 3 "time limit" timelimit
    field --integer --status "0 - no frag limit" --width 3 "frag limit" fraglimit
    blank
    action " Additional Game Settings " pushmenu gameflags
    blank
    action --align " Play" "forcemenuoff;set ltk_loadbots 1;set am 2; set maxclients 16;if $teammode == 1 then teamdm 0 else teamdm 1;set allweapon $allweapon;set allitem $allitem; map $nextserver force"
end

